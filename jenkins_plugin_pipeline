pipeline {
  agent any

  stages {
    stage('git clone') {
      steps {
        git url: 'https://github.com/jennysnyk/juice-shop.git'
        }
    }
    stage('Build') {
      steps {
        echo 'Building...'
      }
    }
    stage('Test') {
      steps {
        echo 'Testing...'
        snykSecurity(
          snykInstallation: 'SnykAPI',
          snykTokenId: 'SNYK_TOKEN',
          // place other parameters here
        )
      }
    }
    stage('Deploy') {
      steps {
        echo 'Deploying...'
      }
    }
  }
}
